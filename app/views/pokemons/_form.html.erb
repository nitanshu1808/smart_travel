<div class="pokemon-form">
  <%= form_for(@pokemon, remote: true, html: {class: "form-horizontal"})  do |f| %>
    <div class="form-group">
      <%= f.label :name, class: "control-label col-sm-2" %>
      <div class="col-sm-10">
        <%= f.text_field :name, placeholder: I18n.t("web.enter_name"), size: 30, class: "form-control", "data-validate-error": true, "data-error-msg": f.object.errors[:name][0] %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :height, class: "control-label col-sm-2" %>
      <div class="col-sm-10">
        <%= f.text_field :height, placeholder: I18n.t("web.enter_height"), size: 30, class: "form-control", "data-validate-error": true, "data-error-msg": f.object.errors[:height][0]  %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :weight, class: "control-label col-sm-2" %>
      <div class="col-sm-10">
        <%= f.text_field :weight, placeholder: I18n.t("web.enter_weight"), size: 30, class: "form-control", "data-validate-error": true, "data-error-msg": f.object.errors[:weight][0]  %>
      </div>
    </div>
    <div class="form-group"> 
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit I18n.t("web.submit"), class: "btn btn-primary", id: "create-pokmn" %>
      </div>
    </div>
  <% end %>
</div>
