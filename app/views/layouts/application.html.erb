<!DOCTYPE html>
<html>
  <head>
    <title><%= I18n.t("app_name") %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
  </head>

  <body>
  <nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="navbar-header">
      <a class="navbar-brand" href="/"><%= I18n.t("app_name") %></a>
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
    </div>
    <div class="navbar-collapse collapse">
      <ul class="nav navbar-nav">
        <li><%= link_to I18n.t("web.dublin_bikes"), dublin_bikes_url %></li>
        <li><%= link_to I18n.t("web.dublin_bus"), dublin_bus_url %></li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <%= sign_up_path %>
        <%= login_logout_path %>
        <% if current_user %>
          <li>
            <%= form_tag("/dublin_bus", method: "get", class: "navbar-form") do %>
              <div class="input-group">
                <%= text_field_tag 'input',"" ,class: "form-control", placeholder: search_form_placeholder %>
                <div class="input-group-btn">
                  <button class="btn btn-default" type="submit">
                    <i class="glyphicon glyphicon-search"></i>
                  </button>
                </div>
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  </nav>
  <%= yield %>
  </body>
</html>
